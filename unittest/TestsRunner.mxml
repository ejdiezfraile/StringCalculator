<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:ui="http://www.adobe.com/2009/flexUnitUIRunner"
				creationComplete="runMe()">
	<mx:Script>
		<![CDATA[
			import org.flexunit.listeners.UIListener;
			import org.flexunit.runner.FlexUnitCore;
			import testcases.StringCalculatorTestSuite;

			private var core:FlexUnitCore;
			
			public function runMe():void {
				core = new FlexUnitCore();
				// Listener for the UI
				core.addListener( uiListener );
				// run test suite
				core.run(StringCalculatorTestSuite);
				
			}
		]]>
	</mx:Script>
	<ui:TestRunnerBase id="uiListener" width="100%" height="100%"  />
</mx:Application>